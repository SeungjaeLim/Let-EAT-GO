<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="204dp"
        android:layout_height="66dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="157dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/my_info" />

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="470dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/tab3_subbackground"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_nickname"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/notosanskrbold"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:text="별명"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskrlight"
                android:text="님은 지금까지"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countText"
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:layout_gravity="start|top|left"
                android:layout_marginTop="-25dp"
                android:fontFamily="@font/notosanskrbold"
                android:paddingTop="-16dp"
                android:text="8"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="72dp"
                android:layout_height="66dp"
                android:layout_gravity="right|top"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="-10dp"
                android:fontFamily="@font/notosanskrlight"
                android:gravity="center_horizontal|top"
                android:text="개 의"
                android:textAlignment="gravity"
                android:textSize="25dp"
                android:translationY="-20dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/notosanskrlight"
            android:gravity="center"
            android:text="파티에 참여했어요 !"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button_join_party_list"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/inner_shadow_button"
            android:fontFamily="@font/notosanskrlight"
            android:text="참여한 파티"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_create_party_list"
            android:layout_width="270dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/inner_shadow_button"
            android:fontFamily="@font/notosanskrlight"
            android:text="개설한 파티"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_logout"
            android:layout_width="135dp"
            android:layout_height="63dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="30dp"
            android:background="@drawable/gradient_button2"
            android:fontFamily="@font/notosanskrlight"
            android:text="로그아웃"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>