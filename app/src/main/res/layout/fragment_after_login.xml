<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/user_nickname"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="72dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/say_hi"
        android:layout_width="230dp"
        android:layout_height="24dp"
        android:text="MYPAGE"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="LOGOUT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_create_party_list"
        android:layout_width="255dp"
        android:layout_height="49dp"
        android:layout_marginTop="136dp"
        android:text="내가 개설한 파티"
        app:layout_constraintTop_toBottomOf="@+id/say_hi"
        tools:layout_editor_absoluteX="78dp" />

    <Button
        android:id="@+id/button_join_party_list"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="내가 참여한 파티"
        app:layout_constraintTop_toBottomOf="@+id/button_create_party_list"
        tools:layout_editor_absoluteX="77dp" />

</androidx.constraintlayout.widget.ConstraintLayout>