<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MenuCrawling"
    tools:visibility="visible">

    <Button
        android:id="@+id/button_kama"
        style="@style/Widget.AppCompat.Button"

        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/menu_button"
        android:elevation="30dp"
        android:padding="10dp"
        android:text="카이마루"
        app:layout_constraintBottom_toTopOf="@+id/button_west"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_west"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/menu_button"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="multiply"
        android:elevation="100dp"
        android:text="서맛골"
        app:layout_constraintBottom_toTopOf="@+id/button_east"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_kama"
        app:layout_constraintVertical_bias="0.21"
        app:rippleColor="#00FFFFFF"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_east"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/menu_button"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="multiply"
        android:elevation="10dp"
        android:text="동맛골"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_west"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>